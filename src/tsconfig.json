{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@services/*": ["app/services/*"],
      "@models/*": ["app/models/*"],
      "@shared/*": ["app/shared/*"],
      "@utils/*": ["app/utils/*"],
      "@resources/*": ["app/resources/*"]
    }
  }
}
